//Informa se o usuário é maior de idade

const idade = Number(prompt("Digite sua idade..."))

function verificarMaioridade(i) {
  if(i >= 18){
    return true
  } else {
    return false
  }
}

var maioridade = verificarMaioridade(idade) 

if (maioridade) {
  console.log("É de maior")
} else {
  console.log("É de menor")
}
