//Função para calcular a hipotenusa de um triangulo retangulo.

let cateto1 = prompt("Digite o tamanho do cateto 1: ")
let cateto2 = prompt("Digite o tamanho do cateto 2: ")

function calcularHipotenusa(cat1, cat2){
  let hip = Math.sqrt((cat1 * cat1) + (cat2 * cat2))

  return hip
}

let hipotenusa = calcularHipotenusa(cateto1, cateto2)

console.log(`Hipotenusa: ${hipotenusa}`)
